.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 140rpx;
  background: white;
  display: flex;
}

.tab-bar-border {
  background-color: rgba(0, 0, 0, 0.33);
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.view-unselected {
  color: black;
  font-size: 28rpx;
  word-spacing: 10rpx;
  margin-bottom: 10rpx;
}

.view-selected {
  color: #018eeb;
  font-size: 40rpx;
  font-weight: 900;
  word-spacing: 10rpx;
  margin-bottom: 10rpx;
}

.line{
  width:80rpx;
  height:5rpx;
  background:black;
}