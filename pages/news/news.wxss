.news{
  margin: 60rpx auto;
  width: 85%;
  position: relative;
}

.img{
  width: 100%;
}

.decoration{
  height: 60rpx;
  width: 93%;
  padding: 10rpx;
  background: linear-gradient(to top, rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 0));
  position: absolute;
  bottom: 126rpx;
  left: 15rpx;
}

.title{
  height: 60rpx;
  margin-top: 20rpx;
  padding: 10rpx;
  background-color: rgba(255, 255, 255, 0.9);
  width: 93%;
  position: absolute;
  bottom: 50rpx;
  left: 15rpx;
  display: flex;
  align-items: center;
}

.title image{
  height: 50rpx;
  width: 50rpx;
}

.title text{
  color: #095e96;
  font-size: 35rpx;
  font-weight: 800;
}